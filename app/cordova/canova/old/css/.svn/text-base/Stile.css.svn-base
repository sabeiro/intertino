div.BoxShadow {
    font-family: Verdana, Arial, Helvetica, sans-serif;
    font-size: 16px;
    color: #2A8050;
    line-height: normal;
    text-shadow: 3px 3px 8px #708090;
    width:100%;
    /* filter: blur; */
    filter:shadow(color=000000,Direction=45) 
    glow(color=000000,strength=0);
    /* filter:dropshadow(color=FF0000,OffX=5, OffY=-3, Positive=1); */
    /* filter:glow(color=000000,strength=0); */
    background-color: #fff;
    float:left;
    -moz-box-shadow: inset 0 0 5px 5px #eee;
    -webkit-box-shadow: inset 0 0 5px 5px#eee;
    box-shadow: inset 0 0 5px 5px #eee;
    -moz-border-radius: 5px;
    border-radius: 5px;
}
div.BoxShadowColors{
    -moz-box-shadow: 0 0 10px 5px black, 40px -30px lime, 40px 30px 50px red, -40px 30px yellow, -40px -30px 50px blue;
    -webkit-box-shadow: 0 0 10px 5px black, 40px -30px lime, 40px 30px 50px red, -40px 30px yellow, -40px -30px 50px blue;
    box-shadow: 0 0 10px 5px black, 40px -30px lime, 40px 30px 50px red, -40px 30px yellow, -40px -30px 50px blue;
}
