#toTop {
    display:none;
    text-decoration:none;
    position:fixed;
    bottom:.75em;
    #    right:.75em;
    left:0px;
    overflow:hidden;
    width:43px;
    height:43px;
    border:none;
    z-index:100;
}
#toTop a{
    width: 108px;
    display: block;
    text-align: center;
    font: 11px/100% Arial, Helvetica, sans-serif;
    text-transform: uppercase;
    text-decoration: none;
    color: #bbb;
    /* transition */
    -webkit-transition: 1s;
    -moz-transition: 1s;
    transition: 1s;
}
#toTop a:hover {
    color: #000;
}
#toTopHover {
    display:block;
    overflow:hidden;
    float:left;
}
#toTop:active,#toTop:focus {
    outline:none;
}
#back-top {
    position: fixed;
    bottom: 50px;
    margin-left: 200px;
    color:#ffff;
}
#back-top a {
    width: 40px;
    display: block;
    text-align: center;
    font: 11px/100% Arial, Helvetica, sans-serif;
    text-transform: uppercase;
    text-decoration: none;
    color: #bbbb;
    /* transition */
    -webkit-transition: 1s;
    -moz-transition: 1s;
    transition: 1s;
}
#back-top a:hover {
    color: #000;
}
/* arrow icon (span tag) */
#back-top span {
    width: 40px;
    height: 40px;
    display: block;
    margin-bottom: 7px;
    background-color: #ffff;
    background-image: url(../../f/ToTop.png);
    /* rounded corners */
    -webkit-border-radius: 15px;
    -moz-border-radius: 15px;
    border-radius: 15px;
    /* transition */
    -webkit-transition: 1s;
    -moz-transition: 1s;
    transition: 1s;
}
#back-top a:hover span {
    background-color: #ffff;
}

