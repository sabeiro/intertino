div.BoxLabel {
    font-family: Verdana, Arial, Helvetica, sans-serif;
    font-size: 22px;
    color: ##8888cc;
    line-height: normal;
    text-shadow: 3px 3px 8px #708090;
    text-align: center;
    width:200;
    /* filter: blur; */
    filter:shadow(color=8888cc,Direction=45) 
    glow(color=8888cc,strength=0);
    /* filter:dropshadow(color=FF0000,OffX=5, OffY=-3, Positive=1); */
    /* filter:glow(color=000000,strength=0); */
    background-color: #ffff;
    float:left;
    -moz-box-shadow: inset 0 0 5px 5px #eee;
    -webkit-box-shadow: inset 0 0 5px 5px#eee;
    box-shadow: inset 0 0 5px 5px #eee;
    -moz-border-radius: 15px;
    border-radius: 15px;
}
div.BoxFooter#a:link {
    text-decoration: underline;
    color: #000000;
    #    color: #009999;
}
/* for the overlapping regions, maps */
#textBox{
    text-align:left;
    background:#99f;
    color:#304;
    border:1px solid #ccc;
    margin-right: auto;
    margin-left: auto;
    opacity:.9;
    width:300px;
    border:5px solid black; 
    border-radius: 10px; 
    box-shadow: 0 5px 50px #333;
} 
#textBox:hover{
    opacity:1;
}
#attivitaBox{
    text-align:left;
    background:#b9f;
    color:#604;
    border:1px solid #ccc;
    margin-right: auto;
    margin-left: auto;
    opacity:1;
    width:300px;
    border:5px solid black; 
    border-radius: 10px; 
    box-shadow: 0 5px 50px #333;
} 
#attivitaBox:hover{
    opacity:1;
}
#imageBox{
    position:relative;
    text-align:left;
    background:rgb(255,255,255);
    border:0px solid #ccc;
    margin: 0 auto; 
    opacity:0.9;
    #width:250px;
    height:550px;
    border:5px solid black; 
    border-radius: 10px; 
    box-shadow: 0 5px 50px #333;
    z-index:1;
} 
#imageBox:hover{
    opacity:1;
} 
#imageBox img{
    position:absolute;
    top:0;
    left:0;
}
#layerBox{
    text-align:left;
